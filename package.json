{
  "name": "aws-lambda-powertools-typescript",
  "version": "0.0.1",
  "description": "A suite of utilities for AWS Lambda functions to ease adopting best practices such as tracing, structured logging, custom metrics, and more.",
  "main": "lib/index.js",
  "types": "lib/",
  "workspaces": [
    "packages/commons",
    "packages/logger",
    "packages/metrics",
    "packages/tracer"
  ],
  "scripts": {
    "init-environment": "husky install",
    "test": "npm t -ws",
    "commit": "commit",
    "package": "npm run package",
    "setup-local": "npm ci --foreground-scripts && cd examples/cdk && npm ci && cd ../../examples/sam && npm ci && cd ../../layer-publisher && npm ci && cd ../.. && npm run init-environment",
    "build": "npm run build -ws",
    "postversion": "git push && git push --tags",
    "docs-website-build-run": "npm run docs-buildDockerImage && npm run docs-runLocalDocker",
    "docs-buildDockerImage": "docker build -t powertool-typescript/docs ./docs/",
    "docs-runLocalDocker": "docker run --rm -it -p 8000:8000 -v ${PWD}:/docs powertool-typescript/docs",
    "docs-api-build-run": "npm run docs-generateApiDoc && npx live-server api",
    "docs-generateApiDoc": "typedoc .",
    "docs-runLocalApiDoc": "npx live-server api"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awslabs/aws-lambda-powertools-typescript.git"
  },
  "keywords": [],
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/awslabs/aws-lambda-powertools-typescript/issues"
  },
  "homepage": "https://github.com/awslabs/aws-lambda-powertools-typescript#readme",
  "devDependencies": {
    "@aws-cdk/cx-api": "^2.50.0",
    "@aws-cdk/cloudformation-diff": "^2.50.0",
    "aws-cdk-lib": "^2.50.0",
    "constructs": "^10.1.155",
    "@commitlint/cli": "^17.2.0",
    "@middy/core": "^3.6.2",
    "@types/aws-lambda": "^8.10.108",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "archiver": "^5.3.1",
    "aws-cdk": "^2.50.0",
    "aws-sdk": "^2.1251.0",
    "cdk-assets": "^2.50.0",
    "esbuild": "^0.15.13",
    "eslint": "^8.27.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "jest": "^28.1.3",
    "jest-runner-groups": "^2.2.0",
    "lerna": "^4.0.0",
    "promptly": "^3.2.0",
    "proxy-agent": "^5.0.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.20",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "hosted-git-info": "^6.1.1"
  }
}